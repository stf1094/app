<Alloy>
    <Window class="bg-white" id="Window_1" title="Zoom">
        <View class="vgroup">
            <View backgroundColor="#e6e6e6" class="top" height="6%">
                <Label class="h5" color="#444444" left="5%" text="TOPIC" top="25%"/>
            </View>
            <View height="8%">
                <TextField class="zoom-textfield" hintText="add a topic"/>
            </View>
            <View backgroundColor="#e6e6e6" class="top" height="6%">
                <Label class="h5" color="#444444" left="5%" text="DATE/TIME" top="25%"/>
            </View>
            <View height="2%"/>
            <View height="18%">
                <!--> <View class="hgroup" left="5%" top="22%">
                    <ImageView class="calendar-icon-square" image="/images/iphone/calendar-icon.png"/>
                    <TextField backgroundColor="#ececec" class="textfield-date"/>
            </View> -->
                <Picker id="dateTimePicker" maxDate="2025,12,31" minDate="2017-08-12 2:15:00 Z" type="Titanium.UI.PICKER_TYPE_DATE_AND_TIME"/>
            </View>
            <View height="2%"/>
            <View backgroundColor="#e6e6e6" class="top" height="6%">
                <Label class="h5" color="#444444" left="5%" text="Time Zone" top="25%"/>
            </View>
            <View height="12%">
                <Picker id="timeZonePicker" left="5%">
                    <PickerColumn id="timeZones">
                        <PickerRow id="PickerRow_1" title="Item 1"/>
                        <PickerRow id="PickerRow_2" title="Item 2"/>
                        <PickerRow id="PickerRow_3" title="Item 3"/>
                        <PickerRow id="PickerRow_4" title="Item 4"/>
                    </PickerColumn>
                </Picker>
            </View>
            <View backgroundColor="#e6e6e6" class="top" height="6%">
                <Label class="h5" color="#444444" left="5%" text="Options" top="25%"/>
            </View>
            <View class="vgroup" height="10%">
                <View class="hgroup top-buffer">
                    <Label color="#444444" left="5%" text="Registration:"/>
                    <Switch bottom="1%" class="left-buffer" id="registrationSwitch"/>
                </View>
            </View>
            <View class="vgroup" height="10%">
                <View class="hgroup top-buffer">
                    <Label color="#444444" left="5%" text="PMI:"/>
                    <Switch id="pmiSwitch" left="20%"/>
                </View>
            </View>
            <Button class="zoom-button" top="25">CREATE MEETING</Button>
        </View>
    </Window>
</Alloy>
